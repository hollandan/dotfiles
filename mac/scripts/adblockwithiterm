#!/usr/bin/env bash

function censorWithIterm() {
	# mute sound
	osascript -e "set volume with output muted"
	# invoke hotkeywindow
		# remember dimensions
		# remember transparency
	# sent transparency to opaque
	# set hotkeywindow full screen
}

censorWithIterm


function uncensorWithIterm {
	# unmute sound
	osascript -e "set volume without output muted"
	# invoke hotkeywindow   -- bring it to front
	# reset saved dimensions
	# reset saved transparency
	# hide hotkeywindow
}

if [ $1 = "at" ]; then
	echo "Okay, you want me to remind you at a certain time."
else
	hour=$(echo "$1" | grep -o [0-9]*h)
	minute=$(echo "$1" | grep -o [0-9]*m)
	second=$(echo "$1" | grep -o [0-9]*s)

	hc=$(echo "$hour"   | grep -o [0-9]*)
	mc=$(echo "$minute" | grep -o [0-9]*)
	sc=$(echo "$second" | grep -o [0-9]*)

	duration=0
	s=""

	reset=$(tput sgr0)
	tan=$(tput setaf 3)
	green=$(tput setaf 2)
	success="${green}✔   |----> Okay, adblock for ${tan}\e[4m[== "

	if [ -z $hour ] && [ -z $minute ] &&  [ -z $second ]; then
		duration=$(echo "$1" | grep -o [0-9]*)
		if [[ duration -gt 1 ]]; then s="s"; else s=""; fi
		success="$success$duration second$s "
	else
		if [[ $hc -gt 0 ]]; then
			duration=$(echo "$duration+($hc*3600)" | bc)
			if [[ $hc -gt 1 ]]; then s="s"; else s=""; fi
			success="$success$hc hour$s "
		fi
		if [[ $mc -gt 0 ]]; then
			duration=$(echo "$duration+($mc*60)" | bc)
			if [[ $mc -gt 1 ]]; then s="s"; else s=""; fi
			success="$success$mc minute$s "
		fi
		if [[ $sc -gt 0 ]]; then
			duration=$(echo "$duration+($sc*1)" | bc)
			if [[ $sc -gt 1 ]]; then s="s"; else s=""; fi
			success="$success$sc second$s "
		fi
	fi

	bigs="S"
	when=$(date -v +$duration$bigs)

	# this was a huge bitch to figure out
	formattedtime=$(date -j -f "%a %b %d %T %Z %Y" "$when" "+%I:%M:%S %p")

	filename=$(date +"%Y-%H-%m-%S")

	echo "$2 Ξ $formattedtime" > "/Users/dan/.config/remindme/$filename"

	success="$success==]${reset}"
	printf "$success\n"

	osascript -e "delay \"$duration\"" -e "set volume without output muted" > /dev/null &
	osascript -e "delay \"$duration\"" -e "do shell script \"/bin/rm /Users/dan/.config/remindme/$filename\"" > /dev/null &
fi
